{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es2015",
    "noEmit": true,
    // Disallow features that require cross-file information for emit.
    "isolatedModules": true,
    // Import non-ES modules as default imports.
    "esModuleInterop": true,
    "target": "esnext",
    "jsx": "react",
    "allowJs": true
  },
  "include": [
    "src"
  ]
}
